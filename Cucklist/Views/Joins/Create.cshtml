@model Cucklist.Models.Join

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Join</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GivenName" class="control-label"></label>
                <input asp-for="GivenName" class="form-control" />
                <span asp-validation-for="GivenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamilyName" class="control-label"></label>
                <input asp-for="FamilyName" class="form-control" />
                <span asp-validation-for="FamilyName" class="text-danger"></span>
            </div>

            @Html.LabelFor(m => m.Contact,"Would you like to receive notification when we are up and running? Enter your email below!")
            @Html.TextBoxFor(m => m.Email,new { @class = "form-control",id = "email",placeholder = "name@domain.com" })
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Contact" /> @Html.DisplayNameFor(model => model.Contact)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Notify" /> @Html.DisplayNameFor(model => model.Notify)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Join" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
